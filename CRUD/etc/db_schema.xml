<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="magento2_table_task_2_5" resource="default" engine="innodb" comment="Table for task 2.5">

        <column xsi:type="int"
                name="user_id"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="User ID"/>

        <column xsi:type="varchar"
                name="first_name"
                length="255"
                comment="First Name"/>

        <column xsi:type="varchar"
                name="last_name"
                length="255"
                comment="Last Name"/>

        <column xsi:type="timestamp"
                name="created_at"
                comment="Created at"/>

        <column xsi:type="timestamp"
                name="updated_at"
                comment="Updated at"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="user_id"/>
        </constraint>
    </table>
</schema>